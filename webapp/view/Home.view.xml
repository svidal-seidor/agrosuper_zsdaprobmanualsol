<mvc:View controllerName="wfprecios.zsdaprobmanualsol.controller.Home"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns="sap.m"
    xmlns:l="sap.ui.layout"
    xmlns:core="sap.ui.core"
    xmlns:columnmenu="sap.m.table.columnmenu"
    xmlns:sap.ui.fl="sap.ui.fl"
    xmlns:sap.ui.dt="sap.ui.dt"
    xmlns:vm="sap.ui.fl.variants"
    xmlns:ui="sap.ui.table"
    >
    <Page id="page" title="{i18n>title} {i18n>version}">


        <IconTabBar
		id="idIconTabBarFiori2"
		expanded="{device>/isNoPhone}"
        select="onSelectTab"
        
		class="sapUiResponsiveContentPadding botonTab">
            <items>
                <IconTabFilter
                    text="Todo"
                    icon="sap-icon://group"
                    key="todo"
                    count="{modelDatos>/cantidades/CantTotal}"
                    class="botonTab"
                    iconColor="Neutral"
                    >
               
                </IconTabFilter>
                <IconTabSeparator />


                 <IconTabFilter
                    text="Vendedor"
                    icon="sap-icon://monitor-payments"
                    key="vendedor"
                    count="{modelDatos>/cantidades/CantVendedor}"
                    iconColor="Default">
                  
                </IconTabFilter>

                <IconTabFilter
                    text="Preventa"
                    icon="sap-icon://activity-items"
                    key="preventa"
                    count="{modelDatos>/cantidades/CantPreventa}"
                    iconColor="Default">
      
                </IconTabFilter>

                
                <IconTabFilter
                    text="Call Center"
                    icon="sap-icon://phone"
                    key="call_center"
                    count="{modelDatos>/cantidades/CantCallCenter}"
                    iconColor="Default">
                   
                </IconTabFilter>

	            <IconTabSeparator icon=""/>

                <IconTabFilter
                    text="Tradicional"
                    icon="sap-icon://home"
                    key="tradicional"
                    count="{modelDatos>/cantidades/CantTradicional}"
                    iconColor="Default">
                   
                </IconTabFilter>

                <IconTabFilter
                    text="Foodservice"
                    icon="sap-icon://meal"
                    key="foodservice"
                    count="{modelDatos>/cantidades/CantFoodservice}"
                    iconColor="Default">
                   
                </IconTabFilter>

                
                <IconTabFilter
                    text="Industriales"
                    icon="sap-icon://factory"
                    key="industriales"
                    count="{modelDatos>/cantidades/CantIndustriales}"
                    iconColor="Default">
                  
                </IconTabFilter>
                
                <IconTabFilter
                    text="Grandes clientes"
                    icon="sap-icon://globe"
                    key="grandes_clientes"
                    count="{modelDatos>/cantidades/CantGrandesClientes}"
                    iconColor="Default">
                  
                </IconTabFilter>

                <IconTabFilter
                    text="Supermercados"
                    icon="sap-icon://cart"
                    key="supermercados"
                    count="{modelDatos>/cantidades/CantSupermercados}"
                    iconColor="Default">
                  
                </IconTabFilter>

            </items>
        </IconTabBar>

    


