<mvc:View controllerName="wfprecios.zsdaprobmanualsol.controller.Home"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:columnmenu="sap.m.table.columnmenu"
xmlns:sap.ui.fl="sap.ui.fl"
xmlns:sap.ui.dt="sap.ui.dt"
xmlns:vm="sap.ui.fl.variants"
xmlns:ui="sap.ui.table"
    >
    <Page id="page" title="{i18n>title} {i18n>version}">


        <IconTabBar
		id="idIconTabBarFiori2"
		expanded="{device>/isNoPhone}"
        select="onSelectTab"
		class="sapUiResponsiveContentPadding">
            <items>
                <IconTabFilter
                    text="Todo"
                    icon="sap-icon://group"
                    key="todo"
                    count="{modelDatos>/cantidades/CantTotal}"
                    iconColor="Neutral">
               
                </IconTabFilter>
                <IconTabSeparator />


                 <IconTabFilter
                    text="Vendedor"
                    icon="sap-icon://monitor-payments"
                    key="vendedor"
                    count="{modelDatos>/cantidades/CantVendedor}"
                    iconColor="Neutral">
                  
                </IconTabFilter>

                <IconTabFilter
                    text="Preventa"
                    icon="sap-icon://activity-items"
                    key="preventa"
                    count="{modelDatos>/cantidades/CantPreventa}"
                    iconColor="Neutral">
      
                </IconTabFilter>

                
                <IconTabFilter
                    text="Call Center"
                    icon="sap-icon://phone"
                    key="call_center"
                    count="{modelDatos>/cantidades/CantCallCenter}"
                    iconColor="Neutral">
                   
                </IconTabFilter>

	            <IconTabSeparator icon=""/>

                <IconTabFilter
                    text="Tradicional"
                    icon="sap-icon://home"
                    key="tradicional"
                    count="{modelDatos>/cantidades/CantTradicional}"
                    iconColor="Neutral">
                   
                </IconTabFilter>

                <IconTabFilter
                    text="Foodservice"
                    icon="sap-icon://meal"
                    key="foodservice"
                    count="{modelDatos>/cantidades/CantFoodservice}"
                    iconColor="Neutral">
                   
                </IconTabFilter>

                
                <IconTabFilter
                    text="Industriales"
                    icon="sap-icon://factory"
                    key="industriales"
                    count="{modelDatos>/cantidades/CantIndustriales}"
                    iconColor="Neutral">
                  
                </IconTabFilter>
                
                <IconTabFilter
                    text="Grandes clientes"
                    icon="sap-icon://globe"
                    key="grandes_clientes"
                    count="{modelDatos>/cantidades/CantGrandesClientes}"
                    iconColor="Neutral">
                  
                </IconTabFilter>

                <IconTabFilter
                    text="Supermercados"
                    icon="sap-icon://cart"
                    key="supermercados"
                    count="{modelDatos>/cantidades/CantSupermercados}"
                    iconColor="Neutral">
                  
                </IconTabFilter>

            </items>
        </IconTabBar>

   <core:Fragment fragmentName="wfprecios.zsdaprobmanualsol.view.fragments.tabla_solicitudes"  type="XML"/> 

        		<footer>
			<OverflowToolbar>
				<Button text="Prueba odata POST" press="fnOdataTestPost"></Button>
                <Button  text="Prueba odata GET" press="fnOdataGet"></Button>
				<Button text="Aprobar" 		 type="Success" press="fnAprobarMasivo" />
                <ToolbarSpacer/>
					<Button text="Rechazar" 		 type="Reject" press="fnRechazoMasivo" />

			</OverflowToolbar>
		</footer>
    </Page>
</mvc:View>
